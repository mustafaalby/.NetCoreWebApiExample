@model RestaurantSignInViewModel
@{
    ViewData["Title"] = "LoginRestaurant";
}

@using (Html.BeginForm(FormMethod.Post))
{
    <div class="container row" >
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="row form-group">
                @Html.Label(null, "Kullanıcı Adı", new { @class = "col-md-4 bg-white text-secondary" })
                @Html.TextBoxFor(x => x.UserName, null, new { @class = "col-md-6 form-control" })

            </div>
            <div class="row form-group">
                @Html.Label(null, "Şifre", new { @class = "col-md-4 bg-white text-secondary"})
                @Html.TextBoxFor(x => x.Password, null, new { @class = "col-md-6 form-control", type = "password" })
            </div>

            <div class=" " style="text-align:center">
                <input type="submit" class="btn btn-dark " value="Giriş" />
            </div>
            <div style="text-align:center">
                <div>@Html.ValidationMessageFor(x => x.UserName, null, new { @class = "text-light " })</div>
                <div>@Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-light " })</div>
            </div>
        </div>

        <div class="col-md-2"></div>
    </div>
}